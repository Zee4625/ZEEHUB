---------------------------------------------------------
-- LIVE MONITORING LOOP (Optimized)
---------------------------------------------------------
task.spawn(function()
    while true do
        -- Calcul FPS
        local fps = math.floor(1 / RunService.RenderStepped:Wait())
        
        -- Calcul Ping
        local ping = math.floor(Stats.Network.ServerStatsItem["Data Ping"]:GetValue())
        
        -- Calcul Memorie (RAM)
        local mem = math.floor(Stats:GetTotalMemoryUsageMb())

        -- Actualizare Text
        PingLbl:SetTitle("Soul Latency: " .. ping .. "ms")
        FPSLbl:SetTitle("Visual Flow: " .. fps .. " FPS")
        MemLbl:SetTitle("Memory Load: " .. mem .. " MB")
        
        task.wait(0.5) -- Update la fiecare 0.5s pentru fluiditate
    end
end)

-- [[ TOGGLE KEYBIND ]]
game:GetService("UserInputService").InputBegan:Connect(function(input, processed)
    if not processed and input.KeyCode == Enum.KeyCode.RightControl then
        Window:Toggle()
    end
end)
