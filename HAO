local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()
local SoundService = game:GetService("SoundService")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Stats = game:GetService("Stats")

-- [[ 1. CONFIGURARE VIZUALĂ: DRAGON EMPEROR ]]
local Window = WindUI:CreateWindow({
    Title = "HAO Hub",
    Folder = "hao_eternal_v1",
    Icon = "solar:crown-bold",
    NewElements = true,
    AccentColor = Color3.fromHex("#D4AF37"), -- Metallic Gold
    OpenButton = {
        Title = "SUMMON UI",
        Enabled = true,
        Draggable = true,
        Color = ColorSequence.new(Color3.fromHex("#1A1A1A"), Color3.fromHex("#D4AF37"))
    }
})

-- [[ 2. SECVENȚĂ CINEMATICĂ DE START ]]
task.spawn(function()
    local steps = {
        {Txt = "Establishing Soul Connection...", Icon = "solar:wifi-bold"},
        {Txt = "Accessing Imperial Archives...", Icon = "solar:folder-open-bold"},
        {Txt = "Synchronizing with " .. Players.LocalPlayer.DisplayName .. "...", Icon = "solar:user-check-bold"},
        {Txt = "Hao Hub: Loaded Successfully.", Icon = "solar:check-circle-bold"}
    }
    
    for _, step in ipairs(steps) do
        WindUI:Notify({ Title = "System Boot", Content = step.Txt, Icon = step.Icon, Duration = 1.5 })
        task.wait(0.8)
    end
end)

-- Funcție Audio
local function PlaySound(id)
    local s = Instance.new("Sound", SoundService)
    s.SoundId = "rbxassetid://" .. id
    s.Volume = 2
    s.PlayOnRemove = true
    s:Destroy()
end
PlaySound(160715357) -- Sunet epic la start

---------------------------------------------------------
-- TAB 1: THE THRONE (INFO & STATS)
---------------------------------------------------------
local InfoTab = Window:Tab({ 
    Title = "The Throne", 
    Icon = "solar:crown-star-bold", 
    IconColor = Color3.fromHex("#D4AF37") 
})

-- Section: Emperor's Identity
local Profile = InfoTab:Section({ Title = "Emperor's Identity" })
Profile:Section({ 
    Title = "Ruler: " .. Players.LocalPlayer.DisplayName,
    Icon = "solar:user-circle-bold",
    TextTransparency = 0 
})
Profile:Section({ 
    Title = "Legacy: " .. Players.LocalPlayer.AccountAge .. " Days Reign", 
    Icon = "solar:history-bold" 
})

-- Section: Realm Stability (Live Stats)
local StatsSec = InfoTab:Section({ Title = "Realm Stability" })
local PingLbl = StatsSec:Section({ Title = "Soul Latency: --", Icon = "solar:transmission-bold" })
local FPSLbl = StatsSec:Section({ Title = "Visual Flow: --", Icon = "solar:videocamera-bold" })
local MemLbl = StatsSec:Section({ Title = "Memory Load: --", Icon = "solar:server-bold" })

-- Section: Royal Decrees (Utils)
local UtilsSec = InfoTab:Section({ Title = "Royal Decrees" })

UtilsSec:Button({
    Title = "Strategic Withdrawal (Rejoin)",
    Desc = "Return to the lobby and reconnect.",
    Icon = "solar:restart-bold",
    Callback = function()
        PlaySound(4612375233)
        game:GetService("TeleportService"):Teleport(game.PlaceId, Players.LocalPlayer)
    end
})

UtilsSec:Button({
    Title = "Unlock Limits (FPS Boost)",
    Desc = "Breaks the 60 FPS chains.",
    Icon = "solar:bolt-bold",
    Callback = function()
        PlaySound(4612375233)
        setfpscap(999)
        WindUI:Notify({Title = "Power Unleashed", Content = "FPS Cap has been removed.", Icon = "solar:bolt-bold"})
    end
})

